<div class="row">
  <!-- Form to Add Department -->
  <div class="col-lg-6 col-12 mb-4">
    <div class="card shadow h-100">
      <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
          <h4 class="card-title mb-0">Create Department</h4>
        </div>
        <form id="departmentForm" class="mt-4">

          <div class="mb-3">
            <label for="deptName" class="form-label">Department Name</label>
            <div class="input-group">
              <span class="input-group-text bg-light">
                <i class="ti ti-briefcase text-black"></i>
              </span>
              <input type="text" class="form-control text-black" id="deptName" name="name" placeholder="e.g. Radiology" required>
            </div>
          </div>
          <div class="mb-3">
            <label for="deptDesc" class="form-label">Description</label>
            <textarea class="form-control text-black" id="deptDesc" name="description" rows="5"></textarea>
          </div>
          <button type="submit" class="btn btn-primary w-100">Create Department</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Department List -->
  <div class="col-lg-6 col-12 mb-4">
    <div class="card shadow h-100">
      <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
          <h4 class="card-title mb-0">Departments</h4>
        </div>
        <div class="table-responsive mt-4">
          <table class="table table-hover align-middle text-nowrap fs-3" id="departmentTable">
            <thead>
              <tr>
                <th>S/N</th>
                <th>Name</th>
                <th>Description</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <!-- Dynamic rows go here -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>




<!-- Edit Department Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow">
      <div class="modal-header text-black">
        <h5 class="modal-title" id="editModalLabel">Edit Department</h5>
        <button type="button" class="btn-close btn-close-black" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <form id="editDeptForm">
          <input type="hidden" id="editDeptId">

          <div class="mb-3">
            <label for="editDeptName" class="form-label">Department Name</label>
            <div class="input-group">
              <span class="input-group-text bg-light"><i class="ti ti-briefcase"></i></span>
              <input type="text" class="form-control text-black" id="editDeptName" name="name" placeholder="Enter department name" required>
            </div>
          </div>

          <div class="mb-3">
            <label for="editDeptDesc" class="form-label">Description</label>
            <textarea class="form-control text-black" id="editDeptDesc" name="description" rows="4" placeholder="Enter department description"></textarea>
          </div>

            <button type="submit" class="btn btn-success">Update Department</button>
        </form>
      </div>
    </div>
  </div>
</div>

